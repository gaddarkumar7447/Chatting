<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e9e9e9"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".createprofile.CreateProfile">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/setProfilePicIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:scaleType="centerCrop"
            app:civ_border_width="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            app:civ_border_color="@color/teal_50"
            android:layout_marginBottom="60dp"
            tools:ignore="MissingClass" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/UserName"
            android:background="@drawable/mobile_number_back"
            android:layout_marginHorizontal="30dp"
            android:hint="Name"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/setProfilePicIV"
            android:paddingStart="15dp"
            android:inputType="textPersonName"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/UserAbout"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/UserName"
            android:layout_marginHorizontal="30dp"
            android:hint="About"
            android:background="@drawable/mobile_number_back"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/UserAbout"
            android:id="@+id/ContinueButton"
            android:text="Create"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </RelativeLayout>
</layout>